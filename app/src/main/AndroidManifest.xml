<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gtaandteam.android.churchapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:label="Song Helper"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gtaandteam.android.churchapp.MainActivity"
            android:label="Menu of Options"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.gtaandteam.android.churchapp.EntryActivity"
            android:label="@string/title_activity_Entry"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OTPopUp"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar.MinWidth" />
        <activity
            android:name=".RegisterActivity"
            android:label="Registration Page"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OTPLoginActivity"
            android:label="Login using OTP"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EmailLoginActivity"
            android:label="Login using Email "
            android:parentActivityName=".WelcomeActivity"

            android:screenOrientation="portrait" />
        <!--android:theme="@style/AppTheme.NoActionBar"-->
        <activity
            android:name=".GenerateActivity"
            android:label="@string/title_activity_generate"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gtaandteam.android.churchapp.SearchActivity"
            android:label="@string/title_activity_search"
            android:screenOrientation="portrait" />
        <activity android:name="com.gtaandteam.android.churchapp.AddActivity" />
        <activity android:name="com.gtaandteam.android.churchapp.EntryPopup"
            android:theme="@style/AppTheme.Custom"
            android:label="Latest Entry"></activity>
    </application>

</manifest>